<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>


<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.control.Label?>
<Pane xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.Views.menuView" prefWidth="1500" prefHeight="820">
    <ImageView fx:id="imageView" fitWidth="1500" fitHeight="820" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" />
    <ImageView fx:id="imageFondo" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" />
    <ImageView fx:id="imageRastrear" onMouseClicked="#Rastrear" fitWidth="100" fitHeight="100" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" />
    <ImageView fx:id="imageInfo" onMouseClicked="#infoEnvio" fitWidth="100" fitHeight="100" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" />

    <Label fx:id="lblEnvio" text="Realizar Envio" style="-fx-font-size: 18px; -fx-text-fill: white; -fx-font-weight: bold;" />

    <ImageView fx:id="imageEnvio"  onMouseClicked="#envio" fitWidth="100" fitHeight="100" pickOnBounds="true">
        <image>
            <Image url="https://cdn-icons-png.freepik.com/512/9540/9540209.png"/>
        </image>
    </ImageView>

    <Label fx:id="lblRastrear" text="Rastrear" style="-fx-font-size: 18px; -fx-text-fill: white; -fx-font-weight: bold;" />

    <Label fx:id="lblInfoEnvios" text="Envios" style="-fx-font-size: 18px; -fx-text-fill: white; -fx-font-weight: bold;" />
</Pane>
