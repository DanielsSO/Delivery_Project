<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>

<AnchorPane  xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.Views.rastrearView" prefWidth="1500" prefHeight="820">

    <Label fx:id="lblInicio" text="Inicio" style="-fx-font-size: 18px;"
           AnchorPane.topAnchor="10.0"
           AnchorPane.rightAnchor="50.0" />

    <ImageView fx:id="menuView" onMouseClicked="#volver" fitWidth="30" fitHeight="30" pickOnBounds="true"
               AnchorPane.topAnchor="10.0"
               AnchorPane.rightAnchor="10.0" />

<HBox>

    <VBox fx:id="VboxFormulario" spacing="10" alignment="CENTER" prefWidth="300" prefHeight="400" style="-fx-padding: 20;">
        <Label fx:id="lbltitulo" text="Rastrear Paquete" style="-fx-font-size: 28px;"/>
        <Label fx:id="lblmensaje" text="Ingrese el número de rastreo:"/>
        <TextField fx:id="txtRastrear" promptText="Número de rastreo" prefWidth="280"/>
        <Button fx:id="btnRastrear" onAction="#Rastrear" text="Buscar"/>
        <Label fx:id="lblMensaje" style="-fx-text-fill: red;"/>
    </VBox>

    <VBox fx:id="VboxTabla"  style="-fx-padding: 10;" alignment="CENTER">
        <TableView fx:id="tableView" prefHeight="60" fixedCellSize="28">
            <columns>
                <TableColumn fx:id="colNombreEnvia" text="Quien Envía" prefWidth="100"/>
                <TableColumn fx:id="colOtrosEnvia" text="Otros Datos Envío" prefWidth="120"/>
                <TableColumn fx:id="colNombreRecibe" text="Quien Recibe" prefWidth="100"/>
                <TableColumn fx:id="colOtrosRecibe" text="Otros Datos Recibe" prefWidth="120"/>
                <TableColumn fx:id="colNumeroRastreo" text="Número Rastreo" prefWidth="100"/>
                <TableColumn fx:id="colFechaEnvio" text="Fecha Envío" prefWidth="100"/>
            </columns>
        </TableView>
    </VBox>


</HBox>
</AnchorPane>